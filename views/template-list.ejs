    </nav>
    <div class="template-content">
        <div class="template-header">
            <h3>Template List</h3>
            <a class="btn btn-success disabled" id="btn-new-tempate" type="button" href="/templates/new">New Template</a>
        </div>
        <div class="table-responsive">
            <table class="table table-hover" id="template-table" style="width:100%">
                <thead>
                    <tr>
                        <th>Template ID</th>
                        <th>Title</th>
                        <th>Message</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <% template_list.forEach(templates => { %>
                        <tr>
                            <td><%= templates[0] %></td>
                            <td><%= templates[1] %></td>
                            <td><%= templates[2] %></td>
                            <td>
                                <div class="btn-group" role="group"><button class="btn btn-primary" type="button">Edit</button><button class="btn btn-primary" type="button">Delete</button></div>
                            </td>
                        </tr> 
                        
                   <% }) %>
                </tbody>
            </table>
        </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.3.1/js/bootstrap.bundle.min.js"></script>
